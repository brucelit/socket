<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.calculator.FirstActivity" >

    <TextView 
        android:text="Hello,SocketActivity"
        android:id="@+id/tv1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         /> 
    
    <Button
        android:layout_below="@id/tv1"
        android:id="@+id/startListener1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="启动监听 "
        /> 
        
        
     <TextView 
        android:text="输入要发送的数据 "
        android:layout_below="@id/startListener1"
        android:id="@+id/tv2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         />   
         
     <TextView 
        android:id="@+id/tv5"
        android:layout_below="@id/startListener1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:padding="5dp"
        android:textSize="20sp"
         /> 
        
    <EditText
        android:layout_below="@id/tv2"
        android:id="@+id/et1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
        
    <Button
        android:layout_below="@id/et1"
        android:id="@+id/startListener2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="发送数据 "
        /> 
        
    <TextView 
        android:text="输出收到的数据 "
        android:layout_below="@id/startListener2"
        android:id="@+id/tv3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         />   
         
    <TextView
        android:layout_below="@id/tv3"
        android:id="@+id/tv4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:padding="5dp"
        android:textSize="20sp"
        />
    
    </RelativeLayout>